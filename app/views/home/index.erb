
<div id='twitterer'>

  <div class="logo">
    <h1>Twitterer</h1>

  </div>

  <% if @tweets.present? %>
    <div class='body'>
      <div>
        <%= react_component("HelloWorld", { handle: @tweets.first.user.name }) %>
      </div>
      <ul>
      <% @tweets.each do |tweet| %>
        <%= react_component("Tweet", { text: raw(tweet.full_text.gsub(/http(.*)\b/, '<a href="\1">\1</a>')) }) %>
      <% end %>
      </ul>
    </div>
  <% else %>
    <div>
      <h4>Twitter user not found</h4>
    </div>
  <% end %>
</div>
