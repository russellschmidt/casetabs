
<div id='twitterer'>
  <div class="logo">
    <h1>Twitterer</h1>
  </div>
  <div class='header'>
    
    <form>
      <input type='text' name='handle'/>
      <button type='submit'>Get Tweets</>
    </form>
  </div>

  <% if @tweets.present? %>
  <div class='body'>
    <ul>
    <% @tweets.each do |tweet| %>
      <li><%= tweet.user.name %> | <%= raw(tweet.full_text.gsub(/http(.*)\b/, '<a href="\1">\1</a>')) %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
</div>
